<Window x:Class="ZPLStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZPL Studio" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Параметры" FontSize="16" FontWeight="SemiBold" />

            <TextBlock Text="TENAM" Margin="0,12,0,4" />
            <TextBox Text="{Binding Tenam, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Загрузить" Margin="0,8,0,0" Command="{Binding LoadCommand}" />

            <TextBlock Text="Принтер" Margin="0,16,0,4" />
            <ComboBox ItemsSource="{Binding Printers}"
                      SelectedItem="{Binding SelectedPrinter}"
                      DisplayMemberPath="Name" />

            <TextBlock Text="Записи" Margin="0,16,0,4" />
            <ListBox ItemsSource="{Binding Records}"
                     SelectedItem="{Binding SelectedRecord}"
                     DisplayMemberPath="Artnr"
                     Height="200" />

            <Button Content="Печать" Margin="0,16,0,0" Command="{Binding PrintCommand}" />
        </StackPanel>

        <TabControl Grid.Column="2">
            <TabItem Header="Предпросмотр">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Border Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="8">
                        <ContentControl Content="{Binding PreviewContent}" />
                    </Border>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="HTML шаблон">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Перечитать" Command="{Binding ReloadTemplateCommand}" />
                        <Button Content="Сохранить" Command="{Binding SaveTemplateCommand}" Margin="8,0,0,0" />
                        <TextBlock Text="Изменения отображаются автоматически." Margin="12,4,0,0" Foreground="#666" />
                    </StackPanel>
                    <TextBox Grid.Row="1"
                             Text="{Binding TemplateText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
